concept
	[at0000]	-- Injury
description
	original_author = <
		["name"] = <"Sam Heard">
		["organisation"] = <"Ocean Informatics">
		["date"] = <"23/04/2006">
		["email"] = <"sam.heard@oceaninformatics.biz">
	>
	details = <
		["en"] = <
			language = <"en">
			purpose = <"For recording an accident or exposure leading to one or more injuries.">
			use = <"">
			keywords = <"accident", "harm", "exposure", "insurance">
			misuse = <"">
		>
	>
	lifecycle_state = <"AuthorDraft">
	other_contributors = <"General Practice Computing Group (Trevor Lord, Richard Hosking)", "General Practice Computing Group (Trevor Lord, Richard Hosking)">

definition
	EVALUATION[at0000] matches {	-- Injury
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; ordered} matches {
					ELEMENT[at0002] matches {	-- Accident or exposure
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Date of accident
						value matches {
							DV_DATE_TIME matches {
								value matches {yyyy-??-??T??:??:??}
							}
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {	-- Age at accident
						value matches {
							C_QUANTITY <
								property = <[openehr::128]>
								list = <
									["1"] = <
										units = <"d">
										magnitude = <|< 0.0|>
									>
									["2"] = <
										units = <"wk">
										magnitude = <|< 0.0|>
									>
									["3"] = <
										units = <"a">
										magnitude = <|>= 0.0|>
									>
								>
							>
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Description
						value matches {
							DV_TEXT matches {*}
						}
					}
					CLUSTER[at0009] occurrences matches {0..*} matches {	-- Injury or illness arising
						items cardinality matches {1..2; ordered} matches {
							ELEMENT[at0010] matches {	-- Problem
								value matches {
									DV_TEXT matches {*}
									DV_URI matches {*}
								}
							}
							ELEMENT[at0050] occurrences matches {0..1} matches {	-- Date of onset
								value matches {
									DV_DATE_TIME matches {
										value matches {yyyy-??-??T??:??:??}
									}
								}
							}
							CLUSTER[at0006] occurrences matches {0..*} matches {	-- Contributing factor
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0007] occurrences matches {0..1} matches {	-- Factor
										value matches {
											DV_TEXT matches {*}
											DV_URI matches {*}
										}
									}
									ELEMENT[at0008] occurrences matches {0..1} matches {	-- Description
										value matches {
											DV_TEXT matches {*}
										}
									}
									ELEMENT[at0016] occurrences matches {0..1} matches {	-- Degree of contribution
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0017, 	-- Major
													at0018]	-- Minor
												}
											}
										}
									}
								}
							}
						}
					}
					CLUSTER[at0019] occurrences matches {0..*} matches {	-- Effect on existing problem
						items cardinality matches {0..*; unordered} matches {
							ELEMENT[at0024] occurrences matches {0..1} matches {	-- Description
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0020] occurrences matches {0..1} matches {	-- Category of effect
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0021, 	-- Permanent aggravation
											at0022]	-- Temporary exacerbation
										}
									}
								}
							}
							ELEMENT[at0051] occurrences matches {0..1} matches {	-- Date of onset
								value matches {
									DV_DATE_TIME matches {
										value matches {yyyy-??-??T??:??:??}
									}
								}
							}
							use_node ELEMENT /data[at0001]/items[at0009]/items[at0010]
							use_node ELEMENT /data[at0001]/items[at0009]/items[at0006]/items[at0016]
						}
					}
					ELEMENT[at0012] occurrences matches {0..1} matches {	-- Intended self harm
						value matches {
							DV_BOOLEAN matches {
								value matches {True, False}
							}
						}
					}
					CLUSTER[at0013] occurrences matches {0..*} matches {	-- Insurance information
						items cardinality matches {0..2; ordered} matches {
							ELEMENT[at0014] occurrences matches {0..1} matches {	-- Insurance company
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0037] occurrences matches {0..1} matches {	-- Date approved
								value matches {
									DV_DATE matches {
										value matches {yyyy-??-XX}
									}
								}
							}
							ELEMENT[at0026] occurrences matches {0..1} matches {	-- Insurance category
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0027, 	-- Motor vehicle
											at0028, 	-- Workers compensation
											at0029, 	-- Personal accident insurance
											at0030, 	-- Permanent disability
											at0031, 	-- Life insurance
											at0032, 	-- Travel insurance
											at0033, 	-- Other third party insurance
											at0034, 	-- Serving defence forces insurance
											at0035]	-- Veterans insurance
										}
									}
								}
							}
							ELEMENT[at0015] occurrences matches {0..1} matches {	-- Claim reference
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0036] occurrences matches {0..1} matches {	-- Details
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0038] occurrences matches {0..1} matches {	-- Date closed
								value matches {
									DV_DATE matches {
										value matches {yyyy-??-XX}
									}
								}
							}
						}
					}
					CLUSTER[at0039] occurrences matches {0..1} matches {	-- Employer responsible for insurance claim 
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0025] occurrences matches {0..1} matches {	-- Responsible employer details
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0045] occurrences matches {0..1} matches {	-- Date of commencement
								value matches {
									DV_DATE_TIME matches {
										value matches {yyyy-??-??T??:??:??}
									}
								}
							}
							ELEMENT[at0047] occurrences matches {0..1} matches {	-- Occupation at time of injury
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0048] occurrences matches {0..1} matches {	-- Job description
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0040] occurrences matches {0..*} matches {	-- Contact
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0041] occurrences matches {0..*} matches {	-- Supervisor
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0046] occurrences matches {0..1} matches {	-- Termination date
								value matches {
									DV_DATE matches {
										value matches {yyyy-??-XX}
									}
								}
							}
						}
					}
					CLUSTER[at0042] occurrences matches {0..*} matches {	-- Employer not involved in insurance claim
						items cardinality matches {0..*; unordered} matches {
							ELEMENT[at0043] occurrences matches {0..1} matches {	-- Employer details
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {[local::]}
									}
								}
							}
							ELEMENT[at0049] occurrences matches {0..1} matches {	-- Occupation
								value matches {
									DV_TEXT matches {*}
								}
							}
							use_node ELEMENT /data[at0001]/items[at0039]/items[at0048]
							use_node ELEMENT /data[at0001]/items[at0039]/items[at0045]
							use_node ELEMENT /data[at0001]/items[at0039]/items[at0040]
							use_node ELEMENT /data[at0001]/items[at0039]/items[at0041]
							use_node ELEMENT /data[at0001]/items[at0039]/items[at0046]
						}
					}
				}
			}
		}
	}

